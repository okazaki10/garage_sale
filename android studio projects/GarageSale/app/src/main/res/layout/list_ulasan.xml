<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambar_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nama_lengkap"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="11dp"
        android:text="nama barang" />

    <TextView
        android:id="@+id/komentar"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_total"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="101dp"
        android:text="komentar" />

    <TextView
        android:id="@+id/rating_total"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_lengkap"
        android:layout_alignStart="@+id/judul_barang"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/tanggal_masuk"
        android:text="rating" />

    <TextView
        android:id="@+id/tanggal_masuk"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nama_lengkap"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:text="tanggal" />

</RelativeLayout>
